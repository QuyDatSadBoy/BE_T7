mixin select-tree-edit-product(records,level = 1,id)
  each item in records 
    - const prefix = Array(level+1).join("-- ")
    if(item["id"]==id)
      option(value=item.id selected=true disabled) #{prefix} #{item.title}
    else 
      option(value=item.id) #{prefix} #{item.title}
    if item.children && item.children.length>0
      +select-tree-edit-product(item.children,level+1,id)