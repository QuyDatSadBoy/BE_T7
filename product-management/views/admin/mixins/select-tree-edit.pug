mixin select-tree-edit(records,level = 1,parent_id,id)
  each item in records 
    - const prefix = Array(level+1).join("-- ")
    if(item["id"]==parent_id)
      option(value=item.id selected=true) #{prefix} #{item.title}
    else 
      if(item["id"]==id)
        option(disabled) #{prefix} #{item.title}
      else
        option(value=item.id) #{prefix} #{item.title}
    if item.children && item.children.length>0
      +select-tree-edit(item.children,level+1,parent_id,id)